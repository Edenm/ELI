@model Eli.Models.tblParent


<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<!-- Modal -->
<div class="modal fade" id="newParent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 align="right " class="modal-title" id="myModalLabel"></h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <fieldset>

                        @Html.HiddenFor(model => model.ParentID)

                        <div class="editor-label">
                            @Html.LabelFor(model => model.ParentFirstName)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.ParentFirstName)
                            @Html.ValidationMessageFor(model => model.ParentFirstName)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.ParentSurName)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.ParentSurName)
                            @Html.ValidationMessageFor(model => model.ParentSurName)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.ParentBirthDate)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.ParentBirthDate)
                            @Html.ValidationMessageFor(model => model.ParentBirthDate)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.ParentGender)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.ParentGender)
                            @Html.ValidationMessageFor(model => model.ParentGender)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.ParentAddress)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.ParentAddress)
                            @Html.ValidationMessageFor(model => model.ParentAddress)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.ParentPhoneNumber)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.ParentPhoneNumber)
                            @Html.ValidationMessageFor(model => model.ParentPhoneNumber)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.ParentMail)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.ParentMail)
                            @Html.ValidationMessageFor(model => model.ParentMail)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.IsWorking)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.IsWorking)
                            @Html.ValidationMessageFor(model => model.IsWorking)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.Explain)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Explain)
                            @Html.ValidationMessageFor(model => model.Explain)
                        </div>

                        <div class="editor-label">
                            @Html.LabelFor(model => model.Comment)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Comment)
                            @Html.ValidationMessageFor(model => model.Comment)
                        </div>

                        <p>
                            <input type="submit" value="Save" />
                        </p>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
