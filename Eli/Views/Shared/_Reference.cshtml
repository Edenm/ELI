@model Eli.Models.tblReference


@{
    string default_val1;
    if (@Model.StatusReference != null)
    {
        default_val1 = @Model.StatusReference;
    }
    else
    {
        default_val1 = "אחר";
    }
}

@{
    string default_val2;
    if (@Model.AbuseType != null)
    {
        default_val2 = @Model.AbuseType;
    }
    else
    {
        default_val2 = "לא רלונטי";
    }
}

@{
    string default_val3;
    if (@Model.ReferenceSource != null)
    {
        default_val3 = @Model.ReferenceSource;
    }
    else
    {
        default_val3 = "הסברה";
    }
}





                        @Html.HiddenFor(model => model.ReferenceNumber)

                        <label float:right class="description" for="element_1">
    סיבת הפנייה
</label>
                       <div float:right; dir="rtl" class="editor-field">
    @Html.EditorFor(model => model.ReasonReference)
    @Html.ValidationMessageFor(model => model.ReasonReference)
</div>

                        <label float:right class="description" for="element_1">
    סטטוס הפנייה
</label>
                        <br />
                                <div style="text-align:right; float:right;">
                                    <select dir="rtl" class="element select" id="StatusReference" name="StatusReference">
                                        <option selected="selected" value="@default_val1">@default_val1</option>
                                        <option value="פוגע">פוגע</option>
                                        <option value="נפגע">נפגע</option>
                                        <option value="פוגע ונפגע">פוגע ונפגע</option>
                                        <option value="אחר">אחר</option>
                                    </select>
                                    </div>
                                <br />
<br />
                        <label float:right class="description" for="element_1">
    סטטוס אחר
</label>
                        <div float:right; dir="rtl" class="editor-field">
    @Html.EditorFor(model => model.OtherStatus)
    @Html.ValidationMessageFor(model => model.OtherStatus)
</div>
                        <br />
                       
                        <label float:right class="description" for="element_1">
    סוג פגיעה
</label>
                       <br />
                                                                            <div style="text-align:right; float:right;">
                                            <select dir="rtl" class="element select" id="AbuseType" name="AbuseType">
                                                <option selected="selected" value="@default_val2">@default_val2</option>
                                                <option value="הזנחה">הזנחה</option>
                                                <option value="פיזית">פיזית</option>
                                                <option value="מינית">מינית</option>
                                                <option value="רגשית">רגשית</option>
                                                <option value="לא רלונטי">לא רלונטי</option>
                                            </select>
                                        </div>
                                                                                <br /> 
                                                                            <br />
                        
                                           <label float:right class="description" for="element_1">
                                              כיצד הגיע
                                            </label>
<br />
                                    <div style="text-align:right; float:right;">
                                        <select dir="rtl" class="element select" id="ReferenceSource" name="ReferenceSource">
                                            <option selected="selected" value="@default_val3">@default_val3</option>
                                            <option value="הסברה">הסברה</option>
                                            <option value="איש מקצוע">איש מקצוע</option>
                                            <option value="מדיה">מדיה</option>

                                        </select>
                                    </div>
                                <br />
<br />
                                
                        <label float:right class="description" for="element_1">
                                    תאריך התחלה
                                </label>
                                  <div float:right; dir="rtl" class="editor-field">
                                    @Html.EditorFor(model => model.StartDateReference)
                                    @Html.ValidationMessageFor(model => model.StartDateReference)
                                </div>
                          @{ if (Model.StartDateReference != null)
                           {
                            <label float:right class="description" for="element_1">
                               תאריך סיום
                            </label>
                            <div float:right; dir="rtl" class="editor-field">
                                @Html.EditorFor(model => model.EndDateReference)
                                @Html.ValidationMessageFor(model => model.EndDateReference)
                            </div>
                           }
                           else
                           {
                            @Html.HiddenFor(model => model.EndDateReference)
                           }
                        }
                  