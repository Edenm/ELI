@model IEnumerable<Eli.Models.tblReference>
@using Eli.Models;
@using System;
@using System.Collections.Generic;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/DataTable/dataTables.keyTable.js"></script>
    <script src="~/Scripts/DataTable/jquery.js"></script>
    <script src="~/Scripts/DataTable/jquery.dataTables.js"></script>
    <link href="~/Scripts/DataTable/dataTables.keyTable.css" rel="stylesheet" />
    <link href="~/Scripts/DataTable/jquery.dataTables.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/LinkStyle.css" rel="stylesheet" />

    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/Content/themes/base/css")

</head>
<body>
    <script src="~/Scripts/notify.js"></script>
    <script>
        notify('@ViewBag.operate', '@ViewBag.type');
    </script>

    <h3 align="right">
        @Html.ActionLink("מטופלים", "IndexPatients", "Patient", new { n = "" }, new { @class = "link" })
        ->
        הפניות
    </h3>

    <div align="right" dir="rtl">
        <h2 align="center" style="color:blue">הפניות וטיפולים</h2>

        @{String name =ViewBag.Name; }
        <h4><b>  הפניות עבור: @name</b></h4>


        <div class="table-responsive">
            <table id="reference" class="display table table-bordered" width="100%">
                <thead>
                    <tr>
                        <th style="text-align: center;"> #</th>
                        <th style="text-align: center;">סיבה</th>
                        <th style="text-align: center;">סטטוס</th>
                        <th style="text-align: center;">סטטוס אחר</th>
                        <th style="text-align: center;">סוג</th>
                        <th style="text-align: center;">כיצד הגיע?</th>
                        <th style="text-align: center;">תאריך התחלה</th>
                        <th style="text-align: center;">תאריך סיום</th>
                        <th style="text-align: center;">עריכה</th>
                        <th style="text-align: center;">טיפולים</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int count = 1;}
 

                    @foreach (var item in Model)
                    {
                        if (@item.ReferenceNumber!=0)
                        {
                            <tr>
                                <td> @count</td>
                                <td> @item.ReasonReference </td>
                                <td> @item.StatusReference </td>
                                <td> @item.OtherStatus </td>
                                <td> @item.AbuseType </td>
                                <td> @item.ReferenceSource </td>
                                <td> @item.StartDateReference </td>
                                <td> @item.EndDateReference </td>
                                <td>
                                    <a class="btn " data-toggle="modal" data-target="#@item.ReferenceNumber">
                                        <img src="~/Images/edit.png" />
                                    </a>
                                </td>
                                <td style="text-align: center;">
                                    <a href="@Url.Action("IndexTreatment", "Treatment", new { rid = @item.ReferenceNumber, pid = @ViewBag.Id })">
                                        <img src="~/Images/treat.png" />
                                    </a>
                                </td>
                            </tr>
                            count++;
                       }
                    }
                </tbody>
            </table>
            <br /><br />

        </div>
    </div>

    @foreach (tblReference item in Model)
    {
        @Html.Partial("_PopUpReference", item, new ViewDataDictionary { {"pid", @ViewBag.Id} });

    }

    <!-- Button trigger modal -->
  
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" style="float:right" data-target="#new">
        הוסף הפנייה חדשה
    </button> 

    <script>
        var table = $('#reference').DataTable();
        new $.fn.dataTable.KeyTable(table);
    </script>



</body>

</html>


