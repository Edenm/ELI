@model IEnumerable<Eli.Models.tblReference>
@using Eli.Models;
@using System;
@using System.Collections.Generic;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/DataTable/dataTables.keyTable.js"></script>
    <script src="~/Scripts/DataTable/jquery.js"></script>
    <script src="~/Scripts/DataTable/jquery.dataTables.js"></script>
    <link href="~/Scripts/DataTable/dataTables.keyTable.css" rel="stylesheet" />
    <link href="~/Scripts/DataTable/jquery.dataTables.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/LinkStyle.css" rel="stylesheet" />

    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/Content/themes/base/css")
</head>
<body>
    <h3 align="right">
        @Html.ActionLink("מטופלים", "IndexPatients", "Patient", new { n = "" }, new { @class = "link" })
        ->
        הפניות
    </h3>

    <div align="right" dir="rtl">
        <h2 align="center" style="color:blue">הפניות וטיפולים</h2>

        @{String name = ViewBag.Id + " " + ViewBag.Name; }
        <h4><b>  הפניות עבור: @name</b></h4>


        <div class="table-responsive">
            <table id="reference" class="display table table-bordered" width="100%">
                <thead>
                    <tr>
                        <th>מספר</th>
                        <th>סטטוס</th>
                        <th>סיבה</th>
                        <th>סוג</th>
                        <th>כיצד הגיע?</th>
                        <th>טיפולים</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.ReferenceNumber</td>
                            <td> @item.OtherStatus </td>
                            <td> @item.ReasonReference </td>
                            <td> @item.AbuseType </td>
                            <td> @item.ReferenceSource </td>
                            <td>
                                <a href="@Url.Action("IndexTreatment", "Treatment", new { rid = @item.ReferenceNumber, pid = @ViewBag.Id })">
                                    <img src="~/Images/treat.png" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



    <script>
        var table1 = $('#reference').DataTable();
        new $.fn.dataTable.KeyTable(table1);
    </script>



</body>

</html>


