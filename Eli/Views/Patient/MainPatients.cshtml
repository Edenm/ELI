
@model IEnumerable<Eli.Models.tblPatient>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/Content/themes/base/css")

    <script src="~/Scripts/DataTable/dataTables.keyTable.js"></script>
    <script src="~/Scripts/DataTable/jquery.js"></script>
    <script src="~/Scripts/DataTable/jquery.dataTables.js"></script>

    <link href="~/Scripts/DataTable/dataTables.keyTable.css" rel="stylesheet" />
    <link href="~/Scripts/DataTable/jquery.dataTables.css" rel="stylesheet" />


</head>
<body>
    <h4 align="right">:חיפוש</h4>
    <div class="table-responsive">
        <table id="myTable" class="display table" width="100%">
            <thead>
                <tr>
                    <th>הוספת פגישה</th>
                    <th>פרטים נוספים</th>
                    <th>טלפון</th>
                    <th>שם משפחה</th>
                    <th>שם פרטי</th>
                    <th>תעודת זהות</th>
                
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <!--<td><img src="~/Images/add.png" id=@item.ID height="10" width="10"> </td>-->
                        <td><button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal"  id=@item.ID> </td>

                        
                        
                       
                        <!--<td><img src="~/Images/info.png" id=@item.ID height="10" width="10" onclick="PatientDetails(id)"> </td>-->
                        <td>@Html.ActionLink("פרטים נוספים", "PatientDetails", "Patient", new { id = item.ID }, null)</td>
                        <td> @item.ContcatPhoneNumber1 </td>
                        <td> @item.PatientSurName </td>
                        <td> @item.PatientFirstName </td>
                        <td> @item.ID </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
            Launch demo modal
        </button>
        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                    </div>
                    <div class="modal-body">
                        <div class="list-group">
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">תעודת זהות</h4>
                                <p class="list-group-item-text">@Model.ElementAt(0).ID</p>
                            </a>
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">שם פרטי</h4>
                                <p class="list-group-item-text">@Model.ElementAt(0).PatientFirstName</p>
                            </a>
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">שם משפחה</h4>
                                <p class="list-group-item-text">@Model.ElementAt(0).PatientSurName</p>
                            </a>
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">תאריך לידה</h4>
                                <p class="list-group-item-text">@Model.ElementAt(0).BirthDate</p>
                            </a>
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">מגדר</h4>
                                <p class="list-group-item-text">@Model.ElementAt(0).Gender</p>
                            </a>
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">מסגרת חינוכית</h4>
                                <p class="list-group-item-text">@Model.ElementAt(0).EducationalFramework</p>
                            </a>
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">עיר</h4>
                                <p class="list-group-item-text">@Model.ElementAt(0).City</p>
                            </a>
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">רחוב</h4>
                                <p class="list-group-item-text">@Model.ElementAt(0).Street</p>
                            </a>
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">מספר בית</h4>
                                <p class="list-group-item-text">@Model.ElementAt(0).HomeNumber</p>
                            </a>
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">מספר טלפון 1</h4>
                                <p class="list-group-item-text">@Model.ElementAt(0).ContcatPhoneNumber1</p>
                            </a>
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">מספר טלפון 2</h4>
                                <p class="list-group-item-text">@Model.ElementAt(0).ContcatPhoneNumber2</p>
                            </a>
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">מייל</h4>
                                <p class="list-group-item-text">@Model.ElementAt(0).ContactMail</p>
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>


       
    <script>

    
        var table = $('#myTable').DataTable();
        new $.fn.dataTable.KeyTable(table);

    </script>





    


    

    
    <script>
    function PatientDetails(id) {

        

        window.location = ' @Url.Action("PatientDetails", "Patient", new { id ="222222222" })';

    }

    </script>





</body>







</html>