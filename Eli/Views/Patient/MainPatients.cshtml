@model IEnumerable<Eli.Models.tblPatient>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/DataTable/dataTables.keyTable.js"></script>
    <script src="~/Scripts/DataTable/jquery.js"></script>

    <script src="~/Scripts/DataTable/jquery.dataTables.js"></script>
    <link href="~/Scripts/DataTable/dataTables.keyTable.css" rel="stylesheet" />
    <link href="~/Scripts/DataTable/jquery.dataTables.css" rel="stylesheet" />

    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/Content/themes/base/css")

</head>
<body>
    <h4 align="center">:מיקומך במערכת</h4>
    <h4 align="center">@Html.ActionLink(" רשימת מטופלים", "MainPatients", "Patient") </h4>
    <h4 align="right">:חיפוש</h4>


    <table id="myTable" class="display nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>פרטים נוספים</th>
                <th>טלפון</th>
                <th>שם משפחה</th>
                <th>שם פרטי</th>
                <th>תעודת זהות</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("PatientDetails", "Patient", new { id = item.ID })" title="info">
                            <img src="~/Images/info.png" />
                        </a>
                    </td>
                    <td> @item.ContcatPhoneNumber </td>
                    <td> @item.PatientSurName </td>
                    <td> @item.PatientFirstName </td>
                    <td> @item.ID </td>
                </tr>
            }
        </tbody>
    </table>


    <script>


        var table = $('#myTable').DataTable();
        new $.fn.dataTable.KeyTable(table);

    </script>















</body>




</html>

