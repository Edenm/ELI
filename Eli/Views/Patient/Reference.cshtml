@model IEnumerable<Eli.Models.tblReference>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/Content/themes/base/css")
    <script src="~/Scripts/DataTable/dataTables.keyTable.js"></script>
    <script src="~/Scripts/DataTable/jquery.js"></script>
    <script src="~/Scripts/DataTable/jquery.dataTables.js"></script>
    <link href="~/Scripts/DataTable/dataTables.keyTable.css" rel="stylesheet" />
    <link href="~/Scripts/DataTable/jquery.dataTables.css" rel="stylesheet" />

</head>
<body>
    <h4 align="center">:הפניות עבור מטופל </h4>
    <h4 align="center"> @Model.ElementAt(0).PatientID </h4>
   
    
    <h4 align="right">:חיפוש</h4>
    <div class="table-responsive">
        <table id="myTable" class="display table" width="100%">
            <thead>
                <tr>
                    <th>הצג טיפולים עבור הפנייה זו</th>

                    <th>כיצד הגיע</th>
                    <th>סוג פגיעה</th>
                    <th>תיאור</th>
                    <th>סטטוס הפניה</th>
                    <th>מספר הפנייה</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>


                        <td>
                            <a href="@Url.Action("TreatByReference", "Patient", new { id = item.ReferenceNumber })" title="info">
                                <img src="~/Images/info.png" />
                            </a>
                        </td>
                        <td> @item.ReferenceSource </td>
                        <td> @item.AbuseType </td>
                        <td> @item.OtherStatus </td>
                        <td> @item.StatusReference </td>
                        <td> @item.ReferenceNumber</td>
                    </tr>
                }
            </tbody>
        </table>



</body>

<script>


    var table = $('#myTable').DataTable();
    new $.fn.dataTable.KeyTable(table);

</script>




</html>