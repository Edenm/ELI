@model Eli.Models.BrotherSister
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/DataTable/dataTables.keyTable.js"></script>
    <script src="~/Scripts/DataTable/jquery.js"></script>
    <script src="~/Scripts/DataTable/jquery.dataTables.js"></script>
    <link href="~/Scripts/DataTable/dataTables.keyTable.css" rel="stylesheet" />
    <link href="~/Scripts/DataTable/jquery.dataTables.css" rel="stylesheet" />

    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/themes/base/css")
    <!-- Button trigger modal -->
    <h4 align="center">:מיקומך במערכת</h4>

   

    <div class="bs-example">

        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
            פרטים אודות משפחה
        </button>

        <button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("Reference", "Patient", new { id =Model.patient.ID })'" />
        הצג הפניות עבור מטופל
        </button>

    </div>

</head>
<body>




    <div align="right">
        <h2>פרטי מטופל</h2>
        <div class="list-group">
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">תעודת זהות</h4>
                <p class="list-group-item-text">@Model.patient.ID</p>
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">שם פרטי</h4>
                <p class="list-group-item-text">@Model.patient.PatientFirstName</p>
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">שם משפחה</h4>
                <p class="list-group-item-text">@Model.patient.PatientSurName</p>
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">תאריך לידה</h4>
                <p class="list-group-item-text">@Model.patient.BirthDate</p>
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">מגדר</h4>
                <p class="list-group-item-text">@Model.patient.Gender</p>
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">מסגרת חינוכית</h4>
                <p class="list-group-item-text">@Model.patient.EducationalFramework</p>
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">כתובת</h4>
                <p class="list-group-item-text">@Model.patient.Address</p>
            </a>

            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">מספר טלפון </h4>
                <p class="list-group-item-text">@Model.patient.ContcatPhoneNumber</p>
            </a>


        </div>
    </div>
</body>
<div align="right">
    <img src="~/Images/go-back-button.png" height="40" width="100" onclick="back()">
</div>
<script>
    function back() {


        window.location = ' @Url.Action("MainPatients", "Patient")';
    }

</script>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 align="right " class="modal-title" id="myModalLabel"></h4>

            </div>
            <div class="modal-body">
                <h4 align="right">פרטי הורים</h4>
                <div class="table-responsive">
                    <table id="myTable" class="display table" width="100%">
                        <thead>
                            <tr>

                                <th>האם עובד</th>
                                <th>מייל</th>
                                <th>טלפון</th>

                                <th>מגדר</th>
                                <th>שם משפחה</th>
                                <th>שם פרטי</th>



                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Parents.ToList())
                            {
                                <tr>
                                    <td> @item.IsWorking </td>
                                    <td> @item.ContactMail </td>

                                    <td> @item.ContcatPhoneNumber </td>
                                    <td> @item.Gender </td>
                                    <td> @item.SurName </td>
                                    <td> @item.FirstName </td>



                                </tr>
                            }
                        </tbody>
                    </table>





                    <h4 align="right">פרטי אחים</h4>
                    <div class="table-responsive">
                        <table id="myTable" class="display table" width="100%">
                            <thead>
                                <tr>

                                    <th>מסגרת לימודית</th>
                                    <th>תאריך לידה</th>

                                    <th>מגדר</th>
                                    <th>שם משפחה</th>
                                    <th>שם פרטי</th>



                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.BrotherSisters.ToList())
                                {
                                    <tr>
                                        <td> @item.StudyFramework </td>
                                        <td> @item.BirthDate </td>
                                        <td> @item.Gender </td>
                                        <td> @item.SurName </td>
                                        <td> @item.FirstName </td>




                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
</html>

