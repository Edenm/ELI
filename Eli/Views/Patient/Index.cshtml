<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
    <meta name="viewport" content="width=device-width" />

    <script src="~/Scripts/DataTable/dataTables.keyTable.js"></script>
    <script src="~/Scripts/DataTable/jquery.js"></script>
    <script src="~/Scripts/DataTable/jquery.dataTables.js"></script>

    <link href="~/Scripts/DataTable/dataTables.keyTable.css" rel="stylesheet" />
    <link href="~/Scripts/DataTable/jquery.dataTables.css" rel="stylesheet" />
</head>
<body>
    @model IEnumerable<Eli.Models.tblPatient>

    <h4 align="right">:חיפוש</h4>

    <table id="myTable" class="display nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th align="right">מייל</th>
                <th align="right">מספר טלפון 2</th>
                <th align="right">מספר טלפון 1</th>
                <th align="right">כתובת</th>
                <th align="right">מסגרת לימודים</th>
                <th align="right">מין</th>
                <th align="right">תאריך לידה</th>
                <th align="right">שם משפחה</th>
                <th align="right">שם פרטי</th>
                <th align="right">תעדות זהות</th>
            </tr>
        </thead>


        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td align="right"> @item.ContactMail </td>
                    <td align="right"> @item.ContcatPhoneNumber2 </td>
                    <td align="right"> @item.ContcatPhoneNumber1 </td>
                    <td align="right"> @(item.City + " " + item.Street + " " + item.HomeNumber) </td>
                    <td align="right"> @item.EducationalFramework </td>
                    <td align="right"> @item.Gender </td>
                    <td align="right"> @item.BirthDate.ToShortDateString() </td>
                    <td align="right"> @item.PatientSurName </td>
                    <td align="right"> @item.PatientFirstName </td>
                    <td align="right"> @item.ID </td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        var table = $('#myTable').DataTable();
        new $.fn.dataTable.KeyTable(table);
    </script>

</body>
</html>
